.products {
  &__list {
    flexy(space-between, stretch);
    margin-top: 2rem;
    @media $mobile {
      flex-wrap: wrap;
    }
  }
  &__item {
    flex: 0 0 25%;
    @media $mobile {
      flex: 0 0 50%;
      margin-bottom: 30px;
    }
  }
}

.product {
  &__link {
    display: block;
    color: inherit;
    text-decoration: none;
    
    {hover-focus-active} {
      color: inherit;
      text-decoration: none;
      outline: none;
    }
  }
  
  &__name {
    font-size: 14px;
    line-height: 1.3;
    text-align: left;
    max-width: 200px;
    margin: 1.25rem auto 0;
  }
  
  &__img {
    margin: 4px auto;
    text-align: center;
    top: 3px;
    transition: height 0.7s linear, border-radius 0.7s linear;
    @media $desktop {
      circle(194px);
      overflow: hidden;
    }
    @media $mobile {
      size(100%, 320px);
    }
    
    img {
      display: block;
      absolute(0px, 50%);
      transform: translateX(-50%);
    }
    @media $desktop {
      .products:hover & {
        width: 100%;
        height: 320px;
        border-radius: 0;
      }
    }
    
    &-wrapper {
      margin: 0 -30px;
    }
    &-bg {
      circle(200px);
      absolute(0px, 50%);
      transform: translateX(-50%);
      
      for $girl in (istomina popova phillipova varapanova) {
        .page--{$girl} & {
          background: url('../img/' + $girl + '/circle.png') center no-repeat;
          background-size: contain;
        }
      }
    }
  }
}