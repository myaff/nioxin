.header {
  fixed(0px, 0px);
  width: 100%;
  background: $white.bg;
  padding: 1rem 0;
  z-index: 9;
  border-bottom: 1px solid $gray.bg;
  
  & + .page {
    margin-top: 60px;
  }
  
  &__content {
    flexy(space-between, center);
  }
  
  &__logo {
    flex: 0 0 300px;
  }
  
  &__btn-menu {
    flex: 0 0 300px;
  }
  
  &__text {
    font-size: 10px;
    text-transform: uppercase;
    text-align: center;
  }
}

.logo {
  &.is-active {
    display: block;
  }
  &__text {
    font-size: 11px;
    font-weight: 500;
    text-transform: uppercase;
  }
  &__icon {
    height: 28px;
  }
  .layout--home &--nioxin {
    margin-right: 0;
    margin-left: auto;
  }
  &--nioxin &__icon {
    width: 300px;
  }
  
  &--elle {
    display: none;
    .logo__icon {
      width: 64px;
    }
  }
  &--psy {
    display: none;
    flex-basis: 320px;
    .logo__icon {
      width: 150px;
    }
  }
  &--mc {
    display: none;
    flex-basis: 320px;
    .logo__icon {
      width: 150px;
    }
  }
}