.main-nav {
  display: none;
  padding: 1.25rem 0;
  &__list {
    list-style: none;
    margin: 0;
    padding: 0;
    flexy(space-between, stretch);
    @media $mobile {
      margin: 60px 0;
      justify-content: center;
      flex-wrap: wrap;
    }
  }
  &__item {
    flex: 0 0 160px;
    margin: 0;
    padding: 0;
    @media $mobile {
      margin: 0 60px 30px;
      
      &:first-of-type {
        order: 2;
      }
      &:last-of-type {
        order: 3;
      }
    }
  }
  &__link {
    display: block;
    color: $gray.text;
    text-align: center;
    font: 500 13px/1.4 $font-base;
    text-decoration: none;
    text-transform: uppercase;
    transform-origin: top center;
    transition: transform 0.7s;
    
    &:hover {
      transform: translateY(-20px);
      color: $gray.text;
    }
    &.disabled {
      pointer-events: none;
      opacity: 0.5;
    }
  }
  &__img {
    display: block;
    circle(160px);
  }
  &__text {
    margin: 1rem auto 0;
    max-width: 140px;
  }
}