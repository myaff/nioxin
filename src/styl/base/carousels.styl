.carousel {
  &--default {
    .owl-nav {
      absolute(50%, 0px);
      margin: -30px 0;
      flexy(space-between, center);
      width: 100%;
    }
    .owl-prev,
    .owl-next {
      size(50px, 60px);
      padding: 0 10px;
      cursor: pointer;
      .icon {
        display: block;
        size(100%);
        line-height: 1;
      }
      &.disabled {
        //opacity: 0.3;
      }
      &:hover {
        color: $primary.light;
      }
    }
    .owl-dots {
      absolute();
      bottom: 100%;
      right: 120px;
      flexy(flex-end, flex-end);
    }
    .owl-dot {
      size(80px, 30px);
      margin-left: 1px;
      background: $primary.light;
      transition: all 0.3s;
      font: bold 16px/1 $font-base;
      color: $black.text;
      padding: 7px;
      text-align: center;
      
      &:hover,
      &.active {
        height: 50px;
        background: $black.bg;
        color: $white.text;
        padding: 17px 7px;
      }
    }
  }
}