.header {
  fixed(0px, 0px);
  width: 100%;
  background: $white.bg;
  z-index: 9;
  border-bottom: 1px solid $gray.bg;
  
  @media $mobile {
    width: 100vw!important;
    flexy(flex-start, flex-start, column, nowrap);
    &.is-open {
      height: 100vh;
      overflow: hidden;
    }
    
    &__content-wrapper,
    &__menu-wrapper {
      width: 100%;
    }
    &__content-wrapper {
      flex: 0 0 auto;
    }
    &__menu-wrapper {
      flex: 1 1 auto;
      overflow-y: auto;
    }
    
    .social {
      margin-bottom: 40px;
    }
  }
  
  & + .page {
    margin-top: 60px;
  }
  
  &__content {
    flexy(space-between, center);
    padding: 1rem 0;
  }
  
  &__logo {
    flex: 0 0 300px;
  }
  
  &__btn-menu {
    flex: 0 0 300px;
  }
  
  &__text {
    font-size: 10px;
    text-transform: uppercase;
    text-align: center;
  }
}

.logo {
  &.is-active {
    display: block;
  }
  @media $mobile {
    .is-open &,
    .is-open &.is-active {
      display: none;
    }
  }
  &__text {
    font-size: 11px;
    font-weight: 500;
    text-transform: uppercase;
  }
  &__icon {
    height: 28px;
  }
  .layout--home &--nioxin {
    margin-right: 0;
    margin-left: auto;
  }
  &--nioxin {
    @media $mobile {
      display: none;
      
      .is-open & {
        display: block;
      }
    }
  }
  &--nioxin &__icon {
    width: 300px;
  }
  
  &--elle {
    display: none;
    .logo__icon {
      width: 64px;
    }
  }
  &--psy {
    display: none;
    flex-basis: 320px;
    .logo__icon {
      width: 150px;
    }
  }
  &--mc {
    display: none;
    flex-basis: 320px;
    .logo__icon {
      width: 150px;
    }
  }
}